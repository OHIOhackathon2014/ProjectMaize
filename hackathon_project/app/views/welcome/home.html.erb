<!DOCTYPE html>
<head>
  <link rel="stylesheet" type="text/css" href="css/style.css">
  <script language="javascript"> 
    function toggle(showHideDiv, switchTextDiv) {
    var list = document.getElementsByClassName('toggle');
    
    for ( i = 0; i < list.length; i++ ) {
		     list.item(i).style.display = "none";
		     }
		     
		     var ele = document.getElementById(showHideDiv);
		     var text = document.getElementById(switchTextDiv);
		     if(ele.style.display == "none") {
  		     ele.style.display = "block";
 		     }
		     }
		     </script>
</head>
<html>
  <body>
    <div class="header"><%= image_tag "header.png" %></div>

    <div class="button_group">
 	  <div class="buttons"><a id="displayRepo" href="javascript:toggle('toggleRepo','displayRepo');"><%= image_tag "repo.png" %></a></div>
      <div class="buttons"><a id="displayUser" href="javascript:toggle('toggleUser','displayUser');"><%= image_tag "user.png" %></a></div>
	  <div class="buttons"><a id="displayOrg" href="javascript:toggle('toggleOrg','displayOrg');"><%= image_tag "org.png" %></a></div>
    </div>

    <%= form_tag({controller: "graph", action: "line_graph"}) do %>
      <%= label_tag :owner, "Owner of repository" %>
      <%= text_field_tag :owner %>
      
      <%= label_tag :repo_name, "Repository name" %>
      <%= text_field_tag :repo_name %>
    <div id="toggleRepo" class="toggle" style="display: none"><h1>peek-a-boo1</h1>     
      <%= radio_button_tag(:add_sub, "add_sub") %>
      <%= label_tag(:add_sub, "Additions and Subtractions") %>
      
      <%= radio_button_tag(:commit_total, "total") %>
      <%= label_tag(:commit_total, "Total Commits") %>
      
      
      <%= radio_button_tag(:commit_user, "per_user") %>
      <%= label_tag(:commit_user, "Commits per user") %>
    </div>
    <div id="toggleUser" class="toggle" style="display: none"><h1>peek-a-boo2</h1>
      <%= radio_button_tag(:commit_proj, "per_proj") %>
      <%= label_tag(:commit_proj, "Commits per project") %>
      
      <%= radio_button_tag(:commit_total, "total") %>
      <%= label_tag(:commit_total, "Total Commits") %>
    </div>
    <div id="toggleOrg" class="toggle" style="display: none"><h1>peek-a-boo3</h1>
      <%= radio_button_tag(:commit_proj, "per_proj") %>
      <%= label_tag(:commit_proj, "Commits per Project") %>
      
      <%= radio_button_tag(:commit_total, "total") %>
      <%= label_tag(:commit_total, "Total Commits") %>
    </div>
    <% end %>
  </body>
</html> 

